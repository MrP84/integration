{
    "parser"  : "babel-eslint",
    "extends" : [
        "standard",
        "standard-react"
     ],
    "env" : {
        "browser" : true
    },
    "globals": {
        "$": false,
        "_": false,
        "Meteor": false,
        "ReactiveDict": false,
        "Modernizr": false,
        "Mongo": false,
        "PersistentMinimongo2": false,
        "moment": false,
        "Tracker": false,
        "App": false,
        "i18n": false,
        "Blaze": false,
        "Session": false,
        "FlowRouter": false,
        "Template": false,
        "notifications": false,
        "Articles": false,
        "Lists": false,
        "Menus": false,
        "Maps": false,
        "Markers": false,
        "MarkerTags": false,
        "WelcomeMessages": false,
        "Settings": false,
        "MarkerTypes": false,
        "Parkings": false,
        "CollectionsObservers": false,
        "SyncedCron": false,
        "CronLogs": false,
        "HTTP": false,
        "L": false,
        "ThreeDeeTouch": false
    },
    "rules": {
        "indent": [2, 4],
        "jsx-no-bind": [0, "never"],
        "react/jsx-indent": [0, 4],
        "jsx-indent-props": [0, "never"],
        "react/jsx-curly-spacing": [0, "never"],
        "react/jsx-boolean-value": [0, "never"],
        "semi" : [2, "always"],
        "operator-linebreak": [2, "after"],
        "no-warning-comments": [1, { "terms": ["todo", "fixme", "xxx"], "location": "start" }]
    }
}